 ********************************************************************)
VAR CONSTANT
	sdRB_MAX_NUM_PV : USINT := 100; (*Maximum number of PVs to be backed up*)
	sdRB_MAX_PV_NAME_LEN : USINT := 255; (*Maximum length of the name of each PV to be backed up*)
	sdRB_MAX_INDEX_PV : USINT := sdRB_MAX_NUM_PV-1; (*Used for array definition*)
	sdRB_MIN_SAVE_TIME : TIME := T#1s; (*Minimum time allowed for SaveTime and SaveTimeUsb*)
	sdRB_DEFAULT_SAVE_TIME : TIME := T#20s; (*Fallback value for SaveTime and SaveTimeUsb, when the configured value is too low*)
END_VAR
